{
    "name":        "knplabs/rad-bundle",
    "type":        "symfony-bundle",
    "description": "This Bundle provides RAD development flow for Symfony2.",
    "keywords":    ["rad"],
    "homepage":    "http://rad.knplabs.com",
    "license":     "MIT",
    "authors": [
        {
            "name":     "Knplabs",
            "homepage": "http://knplabs.com"
        }
    ],

    "require": {
        "php":              ">=5.3.2",
        "symfony/symfony":  ">=2.0.10,<2.1.0",
        "twig/extensions":  "*",

        "symfony/assetic-bundle":  "2.0.*",
        "sensio/generator-bundle": "2.0.*"
    },

    "scripts": {
        "post-install-cmd": [
            "Knp\\Bundle\\RadBundle\\Composer\\ScriptHandler::configs",
            "Knp\\Bundle\\RadBundle\\Composer\\ScriptHandler::clearCache",
            "Knp\\Bundle\\RadBundle\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Knp\\Bundle\\RadBundle\\Composer\\ScriptHandler::clearCache",
        ]
    },

    "autoload": {
        "psr-0": { "Knp\\Bundle\\RadBundle": "" }
    },

    "target-dir": "Knp/Bundle/RadBundle",

    "bin": ["bin/generate-rad-project"]
}
